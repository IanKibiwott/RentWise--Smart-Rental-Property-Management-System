<!DOCTYPE html>
<html>
<head>
  <title>Assign Property</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <h2>Assign Property to Tenant</h2>

  <form action="/landlord/assign" method="POST">
    <label for="tenant_id">Select Tenant:</label>
    <select name="tenant_id" required>
      <% tenants.forEach(tenant => { %>
        <option value="<%= tenant.id %>"><%= tenant.name %></option>
      <% }); %>
    </select>

    <label for="property_id">Select Property:</label>
    <select name="property_id" required>
      <% properties.forEach(property => { %>
        <option value="<%= property.id %>"><%= property.name %></option>
      <% }); %>
    </select>

    <button type="submit">Assign Property</button>
  </form>
</body>
</html>
