<!DOCTYPE html>
<html lang="en">
<head>
  <title>Add Property - RentWise</title>
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body class="homepage-wrapper">
  <h1>Add New Property</h1>

  <% if (typeof error !== 'undefined') { %>
    <p style="color: #ff4d4d;"><%= error %></p>
  <% } %>

  <form action="/add-property" method="POST" style="max-width: 500px; margin: auto;">
    <input type="text" name="title" placeholder="Property Title" required /><br /><br />
    <textarea name="description" placeholder="Description"></textarea><br /><br />
    <input type="text" name="address" placeholder="Address" /><br /><br />
    <input type="number" step="0.01" name="rent" placeholder="Monthly Rent (KES)" required /><br /><br />
    <button type="submit" class="btn">Add Property</button>
  </form>

  <p><a href="/properties">Back to Properties</a></p>
</body>
</html>
